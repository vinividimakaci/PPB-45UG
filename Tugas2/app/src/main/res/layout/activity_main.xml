        android:text="TOAST"
        android:textSize="30dp"
        android:background="@color/colorBiru"
        android:textColor="@color/colorPutih"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="0"
        android:layout_height="wrap_content"
        />
</LinearLayout>